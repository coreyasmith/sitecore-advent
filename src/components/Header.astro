---
import { SITE_TITLE } from '../consts';
import logo from '../assets/logo.svg';
import HeaderStringLights from './HeaderStringLights.astro';
---
<header class="relative flex items-center justify-between p-6 bg-green-950/80 shadow-lg">
  <a href="/" class="flex items-center space-x-4 transition transform hover:scale-105 duration-300">
    <img src={logo.src} alt={SITE_TITLE} class="h-12" />
    <h1 class="text-2xl font-bold">{SITE_TITLE}</h1>
  </a>

  <!-- Insipired by https://codepen.io/moralejf/pen/nrZMYm -->
  <a 
    href="/rss.xml" 
    class="hidden md:flex flex-col items-center transition transform hover:scale-105 duration-300"
    title="RSS Feed"
    aria-label="Subscribe to RSS Feed"
  >
    <div class="w-4 h-1.5 bg-slate-400 rounded-sm"></div>
    <div class="h-10 w-10 bg-linear-to-br from-red-700 to-red-900 rounded-full flex items-center justify-center -mt-0.5">
      <svg 
        xmlns="http://www.w3.org/2000/svg" 
        viewBox="0 0 24 24" 
        fill="currentColor" 
        class="w-8 h-8 text-white/90"
      >
        <circle cx="6.18" cy="17.82" r="2.18"/>
        <path d="M4 4.44v2.83c7.03 0 12.73 5.7 12.73 12.73h2.83c0-8.59-6.97-15.56-15.56-15.56zm0 5.66v2.83c3.9 0 7.07 3.17 7.07 7.07h2.83c0-5.47-4.43-9.9-9.9-9.9z"/>
      </svg>
    </div>
  </a>

  <HeaderStringLights />
</header>
